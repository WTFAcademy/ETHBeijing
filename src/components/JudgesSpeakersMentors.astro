<section class="container">
    <div id="speaker" class="anchor"></div>
    <div class="title">Judges, Speakers & Mentors</div>
    <div class="card_container">
        {
            cardData.map((item,idx) => {
                return (
                    <div class="card_box" key={idx}>
                        <div class="avatar">
                            <img class="avatar_img" src={item.img} />
                        </div>
                        <div class="wrap">
                            <div class="wrap_name">{item.name}</div>
                            <div class="wrap_title">{item.title}</div>
                        </div>
                    </div>
                );
            })
        }
    </div>
</section>

<style>
    .container {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .title {
        font-family: Inter;
        font-size: 36px;
        font-weight: 700;
        line-height: 44px;
        letter-spacing: 0em;
        text-align: center;
    }

    .card_container{
        width: 80%;
        margin-top: 30px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .card_box {
        height: 96px;
        width: 400px;
        border-radius: 10px;
        padding: 16px 20px 16px 20px;
        border: 0.5px solid #9ca3af;
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 16px 20px;
        margin-top: 20px;
    }

    .avatar_img {
        width: 64px;
        height: 64px;
        border-radius: 1.14286e6px;
    }

    .wrap{
        margin-left: 20px;
    }

    .wrap_name {
        font-style: normal;
        font-weight: 600;
        font-size: 18px;
        line-height: 22px;
        color: #000000;
    }

    .wrap_title {
        font-weight: 400;
        font-size: 14px;
        line-height: 17px;
        color: #525252;
        margin-top: 8px;
    }
</style>
